<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoInterfazNatural.MVVM.View.SegPag"
             Title="SegPag">

    <VerticalStackLayout Padding="25" Spacing="20">

        <Label Text="Configuración de Voz" 
               FontSize="24" 
               FontAttributes="Bold" 
               TextColor="#2C3E50" 
               Margin="0,20,0,0"/>

        <Label Text="Escribe el mensaje que el sistema debe reproducir mediante la interfaz natural de voz." 
               FontSize="14" 
               TextColor="#7F8C8D" />

        <Border StrokeShape="RoundRectangle 12" 
                Stroke="#DCDDE1" 
                StrokeThickness="1" 
                Padding="15"
                BackgroundColor="#FAFAFA">
            <Entry Text="{Binding mensaje.Contenido}" 
                   Placeholder="Ej: Buenos días, ¿en qué puedo ayudarle?" 
                   TextColor="#2C3E50"
                   FontSize="18" />
        </Border>

        <Button Text="REPRODUCIR AHORA" 
                Command="{Binding Hablar}" 
                BackgroundColor="#27AE60" 
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="60"
                CornerRadius="12"
                Margin="0,10,0,0" />

        <Button Text="Volver" 
                Clicked="OnBackClicked"
                BackgroundColor="Transparent"
                TextColor="#E74C3C"
                FontSize="14" />

    </VerticalStackLayout>

</ContentPage>